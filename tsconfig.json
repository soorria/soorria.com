{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~data/*": ["src/data/*"],
      "$styles": ["src/mdx/styles.ts"]
    },
    "incremental": true,
    "importsNotUsedAsValues": "remove",
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/types/react.d.ts",
    "eslint.config.mts",
    "postcss.config.js",
    "prettier.config.mjs"
  ]
}
